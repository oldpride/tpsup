#!/bin/bash

usage () {
   cat <<EOF
usage:

   $0 file

   find the rpm name for a file

   note: Ubuntu doesn't use rpm.
   use findpkg on Ubuntu.

examples:

   $0 libc.so

EOF
   exit 1
}

if [ $# -eq 0 ]; then
   echo "wrong number of args"
   usage
fi

# check whether this is ubuntu. if yes, suggest using findpkg
if [ -f /etc/lsb-release ]; then
   echo "This is Ubuntu. Please use findpkg instead of $0."
   exit 1
fi

# sometimes 3rd party (anaconda) lib gets linked to rpm command, causing error
unset LD_LIBRARY_PATH

for i in $@
do
   echo "rpm --filesbypkg -aq|egrep -i 'Si'"

   rpm --filesbypkg -aq|egrep -i "$i"

   echo

done
